{
  "name": "xam-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "docker:test": "docker compose -f docker-compose.test.yaml up -d --wait",
    "docker:test:down": "docker compose -f docker-compose.test.yaml down -v",
    "pretest:e2e": "bun run docker:test",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "posttest:e2e": "bun run docker:test:down",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "test:e2e:auth": "jest --config ./test/jest-e2e.json --testPathPatterns=auth --runInBand",
    "test:e2e:users": "jest --config ./test/jest-e2e.json --testPathPatterns=users --runInBand",
    "test:e2e:organizations": "jest --config ./test/jest-e2e.json --testPathPatterns=organizations --runInBand",
    "test:e2e:roles": "jest --config ./test/jest-e2e.json --testPathPatterns=roles --runInBand",
    "seed": "ts-node -r tsconfig-paths/register src/infrastructure/persistence/seeds/seed.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:generate": "bun run typeorm migration:generate -d src/infrastructure/persistence/typeorm/data-source.ts -p src/infrastructure/persistence/typeorm/migrations/migration",
    "db:create": "bun run typeorm migration:create",
    "db:migrate": "bun run typeorm migration:run -d src/infrastructure/persistence/typeorm/data-source.ts",
    "db:revert": "bun run typeorm migration:revert -d src/infrastructure/persistence/typeorm/data-source.ts",
    "db:show": "bun run typeorm migration:show -d src/infrastructure/persistence/typeorm/data-source.ts",
    "schema:drop": "bun run typeorm schema:drop -d src/infrastructure/persistence/typeorm/data-source.ts",
    "docker:dev": "docker compose --profile dev up --build",
    "docker:dev:down": "docker compose --profile dev down",
    "docker:prod": "docker compose --profile prod up --build -d",
    "docker:prod:down": "docker compose --profile prod down",
    "docker:db": "docker compose up postgres -d",
    "docker:logs": "docker compose logs -f"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "dotenv": "^16.4.5",
    "helmet": "^8.1.0",
    "minio": "^8.0.6",
    "nestjs-pino": "^4.5.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.28",
    "uuid": "9",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "9",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
